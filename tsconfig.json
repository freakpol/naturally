{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "types": ["node", "debug"],
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}